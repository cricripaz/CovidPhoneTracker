<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/backgroundItem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/item_notificacion"
        app:layout_constraintHeight_percent=".96"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fechaNotificacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="TextView"
        android:textSize="8sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@id/backgroundItem"
        app:layout_constraintHeight_percent=".26"
        app:layout_constraintStart_toStartOf="@id/backgroundItem"
        app:layout_constraintTop_toTopOf="@id/backgroundItem" />

    <TextView
        android:id="@+id/textoNotificacion"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="TextView"
        app:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="@id/backgroundItem"
        app:layout_constraintHeight_percent=".26"
        app:layout_constraintStart_toStartOf="@id/backgroundItem"
        app:layout_constraintTop_toBottomOf="@id/fechaNotificacion" />

</androidx.constraintlayout.widget.ConstraintLayout>